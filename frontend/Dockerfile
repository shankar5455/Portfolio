# ===== Build stage =====
FROM node:20-alpine AS build
WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .
RUN npm run build

# ===== Run stage (Nginx) =====
FROM nginx:alpine
COPY --from=build /app/build /usr/share/nginx/html

# Optional: custom nginx.conf if you use React Router
# COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
